CassandraDB tables 
-------------------
CREATE KEYSPACE IF NOT EXISTS scipi WITH replication = {'class': 'SimpleStrategy', 'replication_factor': '1'};
CREATE TABLE IF NOT EXISTS scipi.oagpub(doi text, title text, publisher text, venue text, lang text, keywords set<text>, year text, authors set<text>, fos set<text> ,PRIMARY KEY(doi));
CREATE TABLE IF NOT EXISTS scipi.oagkw(keyword text, count int, PRIMARY KEY(keyword));
CREATE TABLE IF NOT EXISTS scipi.oagfos(fos text, count int, PRIMARY KEY(fos));
CREATE TABLE IF NOT EXISTS scipi.yrwisedist(year text, single int, joint int, total int, single_perc double, joint_perc double, PRIMARY KEY(year));
CREATE TABLE IF NOT EXISTS scipi.authorptrn(author_unit int, no_articles int, no_authors int ,PRIMARY KEY(author_unit));
CREATE TABLE IF NOT EXISTS scipi.aap(year text, no_articles int, no_authors int, avg_author_paper double, PRIMARY KEY(year));
CREATE TABLE IF NOT EXISTS scipi.topkw(keyword text, count int,  PRIMARY KEY(keyword));


TRUNCATE scipi.oagpub;
TRUNCATE scipi.oagkw;
TRUNCATE scipi.oagfos;
TRUNCATE scipi.yrwisedist;
TRUNCATE scipi.authorptrn;
TRUNCATE scipi.aap;

Kafka topics 
-------------
bin/kafka-topics.sh --create --bootstrap-server localhost:9092 --replication-factor 1 --partitions 1 --topic oag
bin/kafka-topics.sh --create --bootstrap-server localhost:9092 --replication-factor 1 --partitions 1 --topic dblp



